{
    "name": "Text Saver",
    "version": "1.0",
    "permissions": ["activeTab", "storage", "commands"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "commands": {
      "save-text": {
        "suggested_key": {
          "default": "Ctrl+Shift+Z"
        },
        "description": "Save selected text"
      }
    },
    "manifest_version": 2
  }
  